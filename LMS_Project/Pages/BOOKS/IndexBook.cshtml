@page
@model LMS_Project.Pages.BOOKS.IndexBookModel
@{

}
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

<br />

<h3>Book List</h3>

<a href="/BOOKS/CreateBook"><button class="btn-outline-primary float-right">+ NEW</button></a>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Book Title</th>
            <th>Author</th>
            <th>Publication</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.books)
        {
        <tr>
            <td>@book.Id</td>
            <td>@book.Book_Title</td>
            <td>@book.Author</td>
            <td>@book.Publication</td>
            <td>@book.Price</td>
            <td>
                <div>
                    <a href="/BOOKS/UpdateBook?id=@book.Id">
                        <button class="btn btn-outline-secondary">Update</button>
                    </a>
                        <a class="btn btn-primary" href="/BOOKS/IndexBook?id=@book.Id" onclick="return confirm('Are you sure?')">Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>

</table>

<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-dialog-centered modal-confirm">
        <div class="modal-content">
            <div class="modal-header flex-column">
                <h4 class="modal-title w-100">Are you sure?</h4>
            </div>
            <div class="modal-body">
                <p>Do you really want to delete these records? This process cannot be undone.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" >Delete</button>
            </div>
        </div>
    </div>
</div>
